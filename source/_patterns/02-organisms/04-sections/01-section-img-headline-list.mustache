{{# sectionBlock }}
<section class="section section-block">
	<div class="section-img">
		{{> atoms-hero }}
	</div>
	<div class="section-body">
		<h2 class="section-title">{{ headline.short }}</h2>
		<p class="section-desc">{{ excerpt.short }}</p>
		<ul class="text-list">
			{{# textList }}
			<li><a href="{{ url }}">{{ label }}</a></li>
			{{/ textList }}
		</ul>
	</div>
</section>
{{/ sectionBlock }}